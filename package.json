{
  "dependencies": {
    "lodash": "^3.10.0",
    "react": "^0.13.3",
    "whatwg-fetch": "^0.9.0"
  },
  "scripts": {
    "serve": "http-server dev-build",
    "live-server": "livereload dev-build",
    "watch": "watchify src/index.js -t babelify --outfile dev-build/bundle.js -v --debug",
    "watch-and-serve": "cp src/index.html dev-build/index.html; npm run watch & npm run live-server & npm run serve",
    "compile": "browserify src/index.js -t babelify | uglifyjs --compress --mangle > build/bundle.js",
    "build": "mkdir build; cp src/index.html build/index.html; npm run compile"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^10.2.6",
    "http-server": "^0.9.0",
    "livereload": "^0.4.1",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  }
}
